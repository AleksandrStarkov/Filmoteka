 {{#each this}}
 <li class="gallery__item" data-id="{{id}}">
        <a class="gallery__link" href="#">
          <img 
          {{#if poster_path}}
          src='https://image.tmdb.org/t/p/w500{{poster_path}}'
          {{else}}
          src='../images/poster-notfound/posterholder.jpg'
          {{/if}}
          class="gallery__img" alt="poster" width="395" height="574">
          <div class="gallery__thumb">
            <h2 class="gallery__film-name">{{title}}</h2>
            <p class="gallery__film-text-about"> {{genre_ids}} | {{release_date}}</p>
          </div>
        </a>
      </li>
{{/each}}